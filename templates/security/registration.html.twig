{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site </h1>

    {{ form_start(form)}}
    {{ form_row(form.username, {'label':'Nom utilisateur', 'attr':{'placeholder':'Nom utilisateur'}})}}
    {{ form_row(form.email, {'label':'Adresse email', 'attr':{'placeholder':'Adresse email ...'}})}}
    {{ form_row(form.password)}}
    {{ form_row(form.confirm_password)}}

    <button type="submit" class="btn btn-success"> Inscription </button>
    {{ form_end(form)}}
{% endblock %}